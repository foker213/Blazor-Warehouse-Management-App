<Notification @ref="_notification" />

<div class="modal @(Show ? "d-block" : "d-none")" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="display: flex; justify-content: space-between">
                <h5 class="modal-title">Редактирование ресурса</h5>
                <button type="button" class="close" style="background: white; border: 0;" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Resource == null)
                {
                    <p>Загрузка...</p>
                }
                else
                {
                    <EditForm Model="@Model" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="resourceName">Наименование</label>
                            <InputText id="resourceName" @bind-Value="Model.Name" class="form-control" />
                            <ValidationMessage For="@(() => Model.Name)" />
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                            <button type="button" class="btn btn-secondary" @onclick="Close">Отмена</button>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public EventCallback<bool> ShowChanged { get; set; }

    [Parameter]
    public ResourceUpdateDto? Resource { get; set; }

    [Parameter]
    public EventCallback OnResourceUpdated { get; set; }

    [Inject]
    public HttpClient Http { get; set; } = null!;

    private ResourceUpdateDto Model { get; set; } = new();
    private Notification? _notification;

    protected override void OnParametersSet()
    {
        if (Resource != null)
        {
            Model = new ResourceUpdateDto
            {
                Id = Resource.Id,
                Name = Resource.Name,
                State = Resource.State
            };
        }
    }

    private async Task HandleSubmit()
    {
        if (Resource == null) return;

        var response = await Http.PutAsJsonAsync(Routes.TransformUrl(Routes.Resources.Api, Resource.Id), Model);

        if (!response.IsSuccessStatusCode)
        {
            _notification?.ShowAsync(await response.Content.ReadAsStringAsync());
            return;
        }

        await OnResourceUpdated.InvokeAsync();
        _notification?.ShowAsync("Ресурс успешно обновлен!", false);

        await Close();
    }

    private async Task Close()
    {
        await ShowChanged.InvokeAsync(false);
    }
}
